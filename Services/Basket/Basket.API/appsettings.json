{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "System.Net.Http.HttpClient.health-checks": "Warning",
      "System.Net.Http.HttpClient.OtlpTraceExporter": "Warning"
    }
  },
  "Metrics": {
    "EnabledMetrics": {
      "Microsoft.AspNetCore.*": true,
      "System.*": true,
      "System.Net.Http.HttpClient.health-checks": false,
      "eShopping.*": true,
      "Basket.*": true,
      "Catalog.*": true,
      "Shared.*": true,
      "Users.*": true
    }
  },
  "AllowedHosts": "*"
}
